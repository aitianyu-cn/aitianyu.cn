{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "tyshell/*": ["../dty/frame/shell/*"],
            "dty-view/*": ["../src/view/*"],
            "dty-app/*": ["../dty/app/*"],
            "dty-bundles/*": ["../dty/bundles/*"],
            "dty-common/*": ["../dty/common/*"],
            "dty-config/*": ["../dty/config/*"]
        }
    }
}

{
    "include": [
        "src/public",
        "src/static",
        "modules/tianyu_shell/resource/core",
        "modules/tianyu_shell/resource/security",
        "modules/tianyu_shell/resource/tianyu",
        "src/app",
        "src/i18n",
        "src/shell",
        "src/resource",
        "modules/tianyu_shell/resource/global.d.ts",
        "**/*.d.ts"
    ],
    "exclude": ["**/design"],
    "compilerOptions": {
        "composite": true,
        "target": "es2021",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "preserve",
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "ts-public/*": ["src/public/*"],
            "ts-static/*": ["src/static/*"],
            "ts-core/*": ["modules/tianyu_shell/resource/core/*"],
            "ts-sec/*": ["modules/tianyu_shell/resource/security/*"],
            "tianyu-app/*": ["src/app/*"],
            "tianyu-i18n/*": ["src/i18n/*"],
            "tianyu-shell/*": ["src/shell/*"],
            "tianyu-res/*": ["src/resource/*"]
        }
    }
}
